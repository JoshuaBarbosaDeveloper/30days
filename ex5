var nota1 = parseInt(prompt("Primeira nota: "));
var nota2 = parseInt(prompt("Segunda nota: "));
var nota3 = parseInt(prompt("Terceira nota: "));

if(isNaN(nota1) || isNaN(nota2) || isNaN(nota3)) {
  console.log("\nPor favor utilize apenas números!" );

} else if (nota1 < 0 || nota2 < 0 || nota3 < 0) {
  console.log("\nPor favor utilize apenas números positivos!" );
  
} else {
  var media =((nota1*2)+(nota2*3)+(nota3*5))/3;

  console.log("\nA média desse aluno é de: " + media);
  
}
