var a = parseInt(prompt("Digite o valor de A: "));
var b = parseInt(prompt("Agora o de B: "));
var c = parseInt(prompt("Por fim, o de C: "));

if(isNaN(a) || isNaN(b) || isNaN(c)){
  console.log("\nPor favor utilize apenas números!" );

} else if (a < 0 || b < 0 || c < 0){
  console.log("\nPor favor utilize apenas números positivos! :D" );
  
} else {
  var r = Math.pow((a+b), 2);
  var s = Math.pow((b+c), 2);;
  var d = (r+s)/2
  console.log("\nO resuldado dessa operação é de: " + d);
}
